<p id="notice"><%= notice %></p>

<h1>World Cities</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>City</th>
      <th>Accent city</th>
      <th>Region</th>
      <th>Population</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @world_cities.each do |world_city| %>
      <tr>
        <td><%= world_city.country %></td>
        <td><%= world_city.city %></td>
        <td><%= world_city.accent_city %></td>
        <td><%= world_city.region %></td>
        <td><%= world_city.population %></td>
        <td><%= world_city.latitude %></td>
        <td><%= world_city.longitude %></td>
        <td><%= link_to 'Show', world_city %></td>
        <td><%= link_to 'Edit', edit_world_city_path(world_city) %></td>
        <td><%= link_to 'Destroy', world_city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @world_cities %>
<%= link_to 'New World City', new_world_city_path %>
